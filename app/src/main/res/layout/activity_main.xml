<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listaDeSuperMercado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nome" />

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cnpj" />

            <EditText
                android:id="@+id/editCnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="caixa" />

            <EditText
                android:id="@+id/editCaixa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <RadioGroup
                android:id="@+id/radioGroupClass"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/valueSuper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="supermercado" />

                <RadioButton
                    android:id="@+id/valuePosto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="posto" />

                <RadioButton
                    android:id="@+id/valueCinema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cinema" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewAr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tem ar condicionado?"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/especificoSuper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/radioButtonSim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sim" />

                <RadioButton
                    android:id="@+id/radioButtonNao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nÃ£o" />

            </RadioGroup>

            <EditText
                android:id="@+id/editTextAssento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="quantidade de assentos"
                android:inputType="text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextCapacidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="capacidade do tanque"
                android:inputType="text"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonInserir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="inserir" />

            <Button
                android:id="@+id/buttonListaSuper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lista de supermercados" />

            <Button
                android:id="@+id/buttonListaPosto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lista de postos" />

            <Button
                android:id="@+id/buttonListaCinema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lista de cinemas" />
	   <Button
                android:id="@+id/buttonSalvarDados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Dados" />
	  <Button
                android:id="@+id/buttonMostrarFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostrar Arquivos" />
	<TextView
		android:id="@+id/textViewArquivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>